{
  "name": "@avenue3-dev/eslint-config",
  "version": "1.0.2",
  "description": "A collection of ESLint configurations for Avenue3 projects.",
  "private": false,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avenue3-dev/eslint-config-avenue3.git"
  },
  "author": "",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "lint": "prettier . --check && eslint . --ext .js",
    "format": "prettier . --write && eslint . --ext .js --fix",
    "release": "release-it"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "husky": "^9.0.11",
    "release-it": "^17.3.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-barrel-files": "^1.0.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.2.5"
  }
}
